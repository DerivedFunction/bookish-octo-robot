{
  "manifest_version": 3,
  "name": "Tabbed: AI chatbox in New Tab/Sidebar",
  "short_name": "Tabbed",
  "version": "1.0.2.4",
  "description": "A new tab page and sidebar with an AI-like user interface",
  "icons": {
    "48": "assets/images/icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bookish-octo-robot@DerivedFunction"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": {
      "16": "assets/images/icon.svg",
      "32": "assets/images/icon.svg"
    }
  },
  "sidebar_action": {
    "default_icon": {
      "16": "assets/images/icon.svg",
      "32": "assets/images/icon.svg"
    },
    "default_title": "Tabbed",
    "default_panel": "sidebar.html",
    "open_at_install": true
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "chrome_settings_overrides": {
    "homepage": "index.html"
  },
  "optional_permissions": ["clipboardRead", "scripting", "tabs", "activeTab"],
  "permissions": ["storage", "contextMenus"],
  "optional_host_permissions": ["*://gemini.google.com/"]
}
