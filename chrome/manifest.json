{
  "manifest_version": 3,
  "name": "Tabbed: AI chatbox in New Tab",
  "short_name": "Tabbed",
  "version": "1.0.2.2",
  "description": "A new tab page with an AI-like user interface",
  "icons": {
    "16": "assets/images/icon.png",
    "32": "assets/images/icon.png",
    "48": "assets/images/icon.png"
  },
  "background": { "service_worker": "background.js" },
  "action": {
    "default_icon": {
      "16": "assets/images/icon.png",
      "32": "assets/images/icon.png",
      "48": "assets/images/icon.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "optional_permissions": ["clipboardRead", "scripting", "activeTab"],
  "permissions": ["storage", "contextMenus", "tabs"],
  "optional_host_permissions": ["*://gemini.google.com/"]
}
